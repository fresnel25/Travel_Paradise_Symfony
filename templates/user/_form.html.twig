{{ form_start(form, {
    attr: {
        class: 'needs-validation glass-form p-5 shadow-lg rounded-4 border-0',
        novalidate: 'novalidate',
        enctype: 'multipart/form-data'
    }
}) }}

<h2 class="mb-4 text-center  icon-button">Créer un utilisateur</h2>

<div class="row g-4">
    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-person-fill me-2 icon-ico"></i>Prénom
        </label>
        {{ form_widget(form.first_name, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Entrez le prénom' } }) }}
        {{ form_errors(form.first_name) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-person-bounding-box me-2 icon-ico"></i>Nom
        </label>
        {{ form_widget(form.last_name, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Entrez le nom' } }) }}
        {{ form_errors(form.last_name) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-envelope-at-fill me-2 icon-ico"></i>Email
        </label>
        {{ form_widget(form.email, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Entrez l\'email' } }) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-camera-fill me-2 icon-ico"></i>Photo de profil
        </label>
        {{ form_widget(form.profil, { attr: { class: 'form-control form-control-lg shadow-sm' } }) }}
        {{ form_errors(form.profil) }}
    </div>



    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-shield-lock-fill me-2 icon-ico"></i>Rôles
        </label>
        {{ form_widget(form.roles, { attr: { class: 'form-select form-select-lg shadow-sm' } }) }}
        {{ form_errors(form.roles) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-key-fill me-2 icon-ico"></i>Mot de passe
        </label>
        {{ form_widget(form.password, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Mot de passe sécurisé' } }) }}
        {{ form_errors(form.password) }}
    </div>
</div>

<div class="mt-5 text-center">
    <button type="submit" class="custom-button">
        Enregistrer
    </button>
</div>

{{ form_end(form) }}
