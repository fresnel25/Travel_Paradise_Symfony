{{ form_start(form, {
    attr: {
        class: 'needs-validation glass-form p-5 shadow-lg rounded-4 border-0',
        novalidate: 'novalidate'
    }
}) }}

<h2 class="mb-4 text-center icon-button">Créer un Visiteur</h2>

<div class="row g-4">
    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-person-fill me-2 icon-ico"></i>Nom
        </label>
        {{ form_widget(form.nom, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Entrez le nom' } }) }}
        {{ form_errors(form.nom) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-person-bounding-box me-2 icon-ico"></i>Prénom
        </label>
        {{ form_widget(form.prenom, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Entrez le prénom' } }) }}
        {{ form_errors(form.prenom) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-envelope-at-fill me-2 icon-ico"></i>Email
        </label>
        {{ form_widget(form.mail, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Entrez votre email' } }) }}
        {{ form_errors(form.mail) }}
    </div>

    <div class="col-md-6">
        <label class="form-label fw-semibold">
            <i class="bi bi-house-fill me-2 icon-ico"></i>Adresse
        </label>
        {{ form_widget(form.addresse, { attr: { class: 'form-control form-control-lg shadow-sm', placeholder: 'Entrez l\'adresse' } }) }}
        {{ form_errors(form.addresse) }}
    </div>
</div>

<div class="mt-5 text-center">
    <button type="submit" class="custom-button">
        Enregistrer
    </button>
</div>

{{ form_end(form) }}